{
  "functions": [
    {
      "source": "services/auth-service",
      "codebase": "auth-service"
    },
    {
      "source": "services/template-service",
      "codebase": "template-service"
    },
    {
      "source": "services/document-service",
      "codebase": "document-service"
    },
    {
      "source": "services/ai-service",
      "codebase": "ai-service"
    },
    {
      "source": "services/export-service",
      "codebase": "export-service"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}

