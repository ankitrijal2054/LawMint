{
  "name": "lawmint",
  "version": "0.1.0",
  "description": "AI-powered demand letter generator for law firms using microservices architecture",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "serve": "npm run preview --workspace=frontend",
    "functions:dev": "firebase emulators:start",
    "firebase:init": "firebase init",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\""
  },
  "workspaces": [
    "frontend",
    "shared",
    "services/*"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "openai": "^4.104.0"
  }
}
